<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EXPENSE</title>
    <link rel="stylesheet" href="/css/admin_style.css">
    <link rel="stylesheet" href="/css/header_style.css">
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
 
  

 <script src="val/valcontent.js"></script>
 
 <script>
    function check()
    {
        alert(" you are going to delete the data");
    }
 </script>
  
</head>
<body>
 <header>
  <nav>
    <h1>Expense</h1>
    
    <ul>
      <div>
      <li><a href="/">HOME</a></li>
    </div>
      <div>
      <LI>
        <form action="/login" method="get">
        <button type="submit" class="btn btn-outline-success">LOGIN</button>
      </form>
      </LI>
    </div>
    </ul>
    <div class="lane">
      <h2 style="color:black">ACTIVATE USER - <%=user.username%> </h2> &nbsp;
      <form action="/logout" method="get">
      <button type="submit" class="btn btn-outline-success">LOGOUT</button>
    </form>
     </div>
  </nav>
 </header>
 <div class="det">
  <h4>Email - <%=user.email%></h4>
  <h4>Pet - <%=user.pet%></h4>
  <h4>Nationality - <%=user.nationality%></h4>
  <h4>City - <%=user.city%></h4>
    <h4>BANK - <%=user.bank%></h4>
</div>
 

  <%  if(message !="") { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong> <%=message%></strong>
        <button type="button" class="close" data-dismiss="alert">
          <span aria-hidden="true">ok</span>
        </button>
      </div>
 <%   } %>
 
 <div class=add>
  <h2>ADD to LIST</h2>
  <form action='/item/add' onsubmit=return validate() method="post" name="test" >
    <div class="row">
      <div class="col">
        <input type="text" class="form-control" placeholder="title" name="title" required>
      </div>
      <div class="col">
        <input type="textbox" class="form-control" placeholder="DESCRIPTION" name="des" required>
      </div>
      <div class="col">
        <input type="number" step="any" class="form-control" placeholder="PRICE" name="price" required>
      </div>
      <div class="col">
        <input type="text" class="form-control" placeholder="quantity" name= "quantity" required>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Add item</button>
  </form>
</div>

<div class="search">
    <form class="d-flex" role="search" method="post" action="/search">
        <input class="form-control me-2" type="search" placeholder="Search title" aria-label="Search" name="box">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
</div>

<div class="tab">
    <table style="width:80% ;">
        <tr>
        <th>
            Sno.
        </th>
        <th>
            title
        </th>
        <th>
            description
        </th>
        <th>
            price
        </th>
        <th>
          quantity
      </th>
      <th>
        amount
    </th>
    <th>
      Date
    </th>
        <th>
            Changes
        </th>
        

    </tr>
  <%  for(var i=0;i<items.length;i++) { %>
    
      <tr>
        <td><%=i+1 %></td>
        <td><%= items[i].title %></td>
        <td><%= items[i].description %></td>
        <td><%= items[i].price %></td>
        <td><%=items[i].quantity %></td>
        <td><%= items[i].amount %></td>
        <td><%=items[i].date %></td>
        <td>
            <form action="/item/delete/<%=items[i].id%>" method="post" onsubmit="return check()" >
             <button type="submit">DELETE</button>
            </form>
            <form action="/item/edit/<%=items[i].id%>" method="get">
                <button type="submit">EDIT</button>
               </form> 

        </td>
      </tr>

   <% } %>
    </table>
    
</div>


 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>
